<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.cse.duthientan.musicapplication.Activity.PlaylistActivity">

    <EditText

        android:id="@+id/name_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"

        android:hint="Enter Playlist Name"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#ffff25e6" />

    <LinearLayout
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/name_playlist"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo_playlist"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/photo_default"
            android:scaleType="fitXY" />

        <EditText
            android:id="@+id/des_playlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:hint="Write decription for playlist"
            android:textColorHighlight="#ff7eff15"
            android:textColorHint="#ffff25e6" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_song_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center"></ListView>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
